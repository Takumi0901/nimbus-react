/* Size
----------------------------------------------------*/
.c-btn--jumbo {
  font-size: 2.8rem;
  line-height: 5.4rem;
}

.c-btn--large {
  font-size: 2.0rem;
  line-height: 4.4rem;
  padding: 0 1.6rem;
}

.c-btn--small {
  font-size: 1.4rem;
  line-height: 2.8rem;
  padding: 0 1rem;
}

.c-btn--tiny {
  font-size: 1rem;
  line-height: 1.6rem;
  padding: 0 0.5rem;
  
}

/* Display
----------------------------------------------------*/
.c-btn--block {
  display: block;
  width: 100%;
}

