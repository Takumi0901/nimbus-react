/* Common
----------------------------------------------------*/
.c-btn {
  color: var(--fontColorLight);
  display: inline-block;
  border: 0;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  padding: 0 2rem;
  line-height: 4.8rem;
  font-size: var(--fontSizeDefault);
  outline: none;
  position: relative;
  white-space:nowrap;
  background: color(var(--colorDefault) lightness(94%));

  &:link,
  &:active,
  &:hover,
  &:visited{
    color: var(--fontColorLight);
    text-decoration: none;
  }

  &:hover {
    background: color(var(--colorDefault) lightness(90%));
  }

  &.disabled,
  &[disabled] {
    cursor: not-allowed;
    opacity: .7;
  }
}


/* Primary
----------------------------------------------------*/
.c-btn--primary {
  color: var(--colorWhite) !important;
  background-color: var(--colorPrimary);

  &:link {
    color: var(--colorWhite) !important;
    background-color: var(--colorPrimary);
  }

  &:hover,
  &:active,
  &:focus {
    color: var(--colorWhite) !important;
    background-color: color(var(--colorPrimary) lightness(45%));
  }

  &.disabled,
  &[disabled] {
    background-color: var(--colorPrimary);
  }
}

